<div class="col-sm-12 col-md-6 offset-md-3">
  <h2>Welcome to the Login Form Demo!</h2>

  <%= render partial: 'shared/alerts' %>

  <div class="card">
    <div class="card-body">
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" name="user[email]" />
          <small class="form-text text-muted" id="emailHelp">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input class="form-control" id="exampleInputPassword1" type="password" name="user[password]" />
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      <% end %>
    </div>
  </div>
</div>
